<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <listener>
        <description>ServletContextListener</description>
        <listener-class>listeners.ConnectionHandler</listener-class>
    </listener>
    <servlet>
        <servlet-name>SaveUser</servlet-name>
        <servlet-class>controller.SaveUser</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>verifyuser</servlet-name>
        <servlet-class>controller.verifyuser</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>controller.logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SaveWord</servlet-name>
        <servlet-class>controller.SaveWord</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NextWord</servlet-name>
        <servlet-class>controller.NextWord</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RevisionController</servlet-name>
        <servlet-class>controller.RevisionController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>check</servlet-name>
        <servlet-class>proprep.check</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SaveUser</servlet-name>
        <url-pattern>/SaveUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>verifyuser</servlet-name>
        <url-pattern>/verifyuser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SaveWord</servlet-name>
        <url-pattern>/SaveWord</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NextWord</servlet-name>
        <url-pattern>/NextWord</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RevisionController</servlet-name>
        <url-pattern>/RevisionController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>check</servlet-name>
        <url-pattern>/check</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
